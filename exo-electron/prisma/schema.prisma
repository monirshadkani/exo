generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GameState {
  id            Int  @id @default(autoincrement())
  cookies       Int @default(0)
  clickValue   Int @default(1)
  autoClickers Int @default(0)

}

model User {
  id    Int     @id @default(autoincrement())
  username String  @unique
  password String 
  totalCookies Int @default(0)
  shops ShopsOnUsers[]
}

model Shop {
  id    Int     @id @default(autoincrement())
  name    String   
  price   Int
  addedValue   Int
  inflationRate Float
  users ShopsOnUsers[] 
}

model ShopsOnUsers {
  user User @relation(fields: [userId], references: [id])
  userId Int
  shop Shop @relation(fields: [shopId], references: [id])
  shopId Int
  countShop Int

  @@id([shopId, userId])
}